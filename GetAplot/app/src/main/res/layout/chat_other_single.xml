<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="35dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="35dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/chatotherbg"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp">

        <TextView
            android:id="@+id/message_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:autoLink="web"
            android:text="Hello everybody i miss you all"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/message_text_layout2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="false"
            android:background="@drawable/image_text_mesg"
            android:cropToPadding="false"
            android:foregroundGravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@color/threes"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey_100"
            android:transitionName="cpic"
            android:visibility="gone">

        </ImageView>

    </RelativeLayout>

    <TextView
        android:id="@+id/message_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/grey_10"
        android:textSize="12sp"
        tools:text="12/6/2017" />


</LinearLayout>






















